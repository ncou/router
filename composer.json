{
    "name": "chiron/router",
    "type": "library",
    "description": "short description",
    "keywords": [
        "router",
        "middleware",
        "http",
        "psr-7",
        "psr7",
        "psr-15",
        "psr15"
    ],
    "homepage": "https://github.com/ncou/",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "psr/http-server-middleware": "^1.0",
        "chiron/injector": "^0.2",
        "chiron/http-exceptions": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-phpunit": "^0.11",
        "phpstan/phpstan-strict-rules": "^0.11",
        "phpunit/phpunit": "^7.3",
        "chiron/coding-standard": "^2.2",
        "nyholm/psr7": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Chiron\\Router\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chiron\\Tests\\Router\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs",
            "@phpstan"
        ],
        "phpunit": "phpunit --colors=always",
        "phpcs": "phpcs src",
        "phpcs-fix": "phpcbf src",
        "phpstan": "phpstan analyse src --level=0",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "chiron": {
            "bootloaders": ["Chiron\\Router\\Bootloader\\RouteCollectorBootloader"]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
